.side-bar
  .side-bar__user-name
    .top-items
      %top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__new
        = link_to new_group_path do
          = icon('fas', 'edit')
        %li.top-items__icons__edit
        = link_to edit_user_path(current_user), class: "icon" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            = group.name
          .group__group-message
            メッセージはまだありません
